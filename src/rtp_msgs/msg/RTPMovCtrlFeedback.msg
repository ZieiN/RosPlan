# Стандартный заголовок ROS-сообщения	
std_msgs/Header header

# Готовность шасси к началу движения	{True, False}	
bool moving_ready

# Текущее состояние стояночного тормоза	{True, False}
bool parking_brake

# Тип шасси
uint8 rtp_type

# Константа, определяющая гусеничный тип шасси	
uint8 TRACKED_CHASSIS = 1

# Константа, определяющая колесный тип шасси	
uint8 WHEELED_CHASSIS = 2

# Текущее значение линейной скорости, м/c	[-30; 30]	
float32 linear_speed		

# Текущее значение угловой скорости, рад./c	[-10; 10]	
float32 angular_speed

# Текущая скорость левого борта, м/c	[-30; 30]	Только для гусеничных шасси
float32 left_tracks_linear_speed

# Текущая скорость правого борта, м/c	[-30; 30]	Только для гусеничных шасси
float32 right_tracks_linear_speed

# Данные электродвигателей
# Гусеничное шасси: 0 - Левый внешний, 1 - Левый внутренний, 2 - Правый внутренний, 3 - Правый внешний.
# Колёсное шасси: 0 - Левый передний, 1 - Левый центральный, 2 - Левый задний, 3 - Правый передний, 4 - Правый центральный, 5 - Правый задний.
rtp_msgs/RTPMotorData[6] rtp_electric_motor			


# Данные рулевой рейки
# Только для колесных шасси: 0 - Передняя рейка, 1 - Задняя рейка
rtp_msgs/RTPRailData[2] rtp_steering_rack			


